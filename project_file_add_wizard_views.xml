<?xml version="1.0" encoding="UTF-8"?>
<odoo>

  <record id="view_project_file_add_wizard_form" model="ir.ui.view">
    <field name="name">project.file.add.wizard.form</field>
    <field name="model">project.file.add.wizard</field>
    <field name="arch" type="xml">
      <form string="Adaugă fișier">
        <sheet>
          <group>
            <field name="implementation_id"/>
            <field name="category"/>
          </group>

          <group>
            <field name="res_model"/>
            <field name="res_id"/>
          </group>

          <group string="Fișier">
            <field name="upload_filename" invisible="1"/>
            <field name="upload" filename="upload_filename"/>
          </group>

          <group>
            <field name="note"/>
          </group>

          <footer>
            <button name="action_create_file" type="object" string="Salvează" class="btn-primary"/>
            <button special="cancel" string="Renunță" class="btn-secondary"/>
          </footer>
        </sheet>
      </form>
    </field>
  </record>

</odoo>